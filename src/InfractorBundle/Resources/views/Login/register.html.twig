<!doctype html>
<html lang="es">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="imagenes/login.jpg">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    
    <title>Iniciar sesión</title>

    <!-- Añadimos el css -->
    <link href="{{ asset('css/login_infractor.css') }}" rel="stylesheet">

  </head>

  <body class="text-center">

    <div class="container">

        <form class="form-signin" action="{{ path("register") }}" method="POST">
          
            <img class="mb-4" src="{{ asset('images/police.png') }}" alt="" width="150" height="150">
            <h1 id="h1"class="h3 mb-3 font-weight-normal">Registrarse</h1>

            <label for="nombre" class="sr-only">Nombre</label>
            {{ form_widget(form.nombre, { "attr": { "class": "form-control", "placeholder": "Nombre" } }) }}

            <label for="apellidos" class="sr-only">Apellidos</label>
            {{ form_widget(form.apellidos, { "attr": { "class": "form-control", "placeholder": "Apellidos" } }) }}

            <label for="tlf" class="sr-only">Teléfono</label>
            {{ form_widget(form.tlf, { "attr": { "class": "form-control", "placeholder": "Teléfono" } }) }}

            <label for="fExpCarnet" class="sr-only">Fecha de Expedición del Carné</label>
            {{ form_widget(form.fExpCarnet, { "attr": { "class": "form-control", "placeholder": "Fecha de Expedición del Carné de Conducir" } }) }}

            <label for="credencial" class="sr-only">Credencial</label>
            {{ form_widget(form.credencial, { "attr": { "class": "form-control", "placeholder": "CIF-NIF" } }) }}

            <label for="password" class="sr-only mt-3">Contraseña</label>
            {{ form_widget(form.password, { "attr": { "class": "form-control mt-3", "placeholder": "Contraseña" } }) }}
            
            <!--<input type="hidden" name="typeLogin" value="infractor">-->
            {{ form_row(form._token) }}
            
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Registrarse"/>
        </form>

        {% if not form.vars.valid %}
            <div class="alert alert-danger">
                {{ form_errors(form.password) }}
            </div>
        {% endif %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}
    </div>
   
  </body>

</html>
