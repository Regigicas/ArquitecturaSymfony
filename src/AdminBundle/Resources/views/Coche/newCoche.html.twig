<!doctype html>
<html lang="es">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="imagenes/login.jpg">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    
    <title>Admin: Registrar coche</title>

	</head>

	<body>

        <form action="{{ path('introducir_coche_admin') }}" method="post">
            Color: 
            <!--<input type="text" name="color" value="$color" required>-->
            {{ form_widget(form.color, { "attr": { "title": "El color no puede contener números" } }) }}
            <br>

            Matrícula: 
            <!--<input type="text" name="matricula" value="$matricula" required>-->
            {{ form_widget(form.matricula) }}
            <br>

            Número Bastidor: 
            <!--<input type="number" name="numeroBastidor" value="$numeroBastidor" required>-->
            {{ form_widget(form.NBastidor, { "attr": { "title": "El número de bastidor no puede contener letras" } }) }}
            <br>

            Año: 
            <!--<input type="number" name="ano" value="$año" required>-->
            {{ form_widget(form.year, { "attr": { "title": "El año debe ser un número de 4 cifras" } }) }}
            <br>
            
            Potencia (CV): 
            <!--<input type="number" name="potencia" value="$potencia" required>-->
            {{ form_widget(form.potenciaCv) }}
            <br>

            DNI/CIF:
            {{ form_widget(form.credencial, { "attr": { "title": "El DNI no puede estar vacio", } }) }}
            <br>

            {{ form_row(form._token) }}
            <input type="submit" value="Registrar coche"/>
        </form>
        
        {% if not form.vars.valid %}
            <div class="alert alert-danger">
                {{ form_errors(form.year) }}
                {{ form_errors(form.color) }}
                {{ form_errors(form.potenciaCv) }}
                {{ form_errors(form.credencial) }}
                {{ form_errors(form.NBastidor) }}
                {{ form_errors(form.matricula) }}
                {{ form_errors(form.credencial )}}
            </div>
        {% endif %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}
    </body>


</html>